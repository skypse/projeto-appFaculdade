<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Instituição"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/editTextNomeInstituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da Instituição*"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editTextDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Descrição"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editTextTelefoneInstituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Telefone"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editTextNecessidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Necessidades (separadas por vírgula)"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/buttonSalvarInstituicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Instituição"
        android:layout_marginTop="24dp" />
</LinearLayout>